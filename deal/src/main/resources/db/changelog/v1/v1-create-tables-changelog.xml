<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="puchkov">
        <createTable tableName="passport">
            <column name="passport_uuid" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="series" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="issue_branch" type="VARCHAR(255)"/>
            <column name="issue_date" type="DATE"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="puchkov">
        <createTable tableName="employment">
            <column name="employment_uuid" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="employer_inn" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="salary" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="work_experience_total" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="work_experience_current" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="puchkov">
        <createTable tableName="client">
            <column name="client_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(50)">
            </column>
            <column name="marital_status" type="VARCHAR(50)">
            </column>
            <column name="dependent_amount" type="INT">
            </column>
            <column name="passport_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="employment_id" type="UUID">
            </column>
            <column name="account_number" type="VARCHAR(255)">
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="client"
                baseColumnNames="passport_id"
                referencedTableName="passport"
                referencedColumnNames="passport_uuid"
                constraintName="fk_client_passport"/>

        <addForeignKeyConstraint
                baseTableName="client"
                baseColumnNames="employment_id"
                referencedTableName="employment"
                referencedColumnNames="employment_uuid"
                constraintName="fk_client_employment"/>
    </changeSet>

    <changeSet id="4" author="puchkov">
        <createTable tableName="credit">
            <column name="credit_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="term" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_payment" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="psk" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="payment_schedule" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="is_insurance_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="is_salary_client" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="credit_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="puchkov">
        <createTable tableName="statement">
            <column name="statement_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="credit_id" type="UUID">
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="applied_offer" type="jsonb"/>
            <column name="sign_date" type="DATE"/>
            <column name="ses_code" type="VARCHAR(255)"/>
            <column name="status_history" type="jsonb"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="statement"
                baseColumnNames="client_id"
                referencedTableName="client"
                referencedColumnNames="client_id"
                constraintName="fk_statement_client"/>

        <addForeignKeyConstraint
                baseTableName="statement"
                baseColumnNames="credit_id"
                referencedTableName="credit"
                referencedColumnNames="credit_id"
                constraintName="fk_statement_credit"/>
    </changeSet>

</databaseChangeLog>